<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp"
    android:background="@drawable/bg_white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/imageview_test"
        android:id="@+id/iv_orderdialog_pic"
        android:layout_width="250dp"
        android:layout_height="250dp"/>
    <TextView
        android:layout_marginTop="10dp"
        android:textSize="@dimen/textview_size_big"
        android:text="宫保鸡丁"
        android:textColor="@color/black"
        android:id="@+id/tv_orderdialog_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="20dp"
        android:text="产品描述"
        android:textSize="@dimen/textview_size_normal"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_orderdialog_introduce"
        android:textSize="@dimen/textview_size_min"
        android:text="好吃实惠好吃实惠好吃实惠好吃惠好吃实惠好吃实惠好吃实惠ddddddd的宫保鸡丁"
        android:maxLines="3"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_orderdialog_option"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:text="分量"
        android:textColor="@color/black"
        android:textSize="@dimen/textview_size_normal"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/ly_orderdialog_selection"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="小份"
            android:id="@+id/bt_orderdialog_small"
            android:background="@drawable/bg_orderdialog_select"
            android:layout_width="60dp"
            android:layout_height="40dp"/>

        <Button
            android:layout_marginLeft="10dp"
            android:text="大份"
            android:id="@+id/bt_orderdialog_big"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_orderdialog_select"
            />

    </LinearLayout>
    <View
        android:layout_marginTop="30dp"
        android:background="@color/grey_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"/>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_orderdialog_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14.00"
            android:textColor="@color/blue"
            android:textSize="@dimen/textview_size_big"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/tv_orderdialog_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_orderdialog_cost"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:text="大份"
            android:textSize="@dimen/textview_size_small" />
        <Button
            android:layout_alignParentRight="true"
            android:id="@+id/bt_orderdialog_addshop"
            android:textColor="@color/white"
            android:text="加入购物车"
            android:background="@drawable/bg_blue"
            android:layout_width="wrap_content"
            android:layout_height="40dp"/>
        <RelativeLayout
            android:layout_alignParentRight="true"
            android:id="@+id/rv_orderdialog_change"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_width="80dp"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_centerVertical="true"
                android:background="@drawable/bg_button_press"
                android:src="@mipmap/imageview_reduce"
                android:id="@+id/bt_orderdialog_reduce"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView

                android:gravity="center"
                android:id="@+id/tv_order_quantity"
                android:layout_centerInParent="true"
                android:layout_width="20dp"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:layout_centerVertical="true"
                android:background="@drawable/bg_button_press"
                android:layout_alignParentRight="true"
                android:src="@mipmap/imageview_add"
                android:id="@+id/bt_orderdialog_add"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>