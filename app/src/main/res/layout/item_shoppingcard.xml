<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_order_product"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="80dp">
    <RelativeLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_centerVertical="true"
            android:src="@mipmap/imageview_test"
            android:layout_alignParentLeft="true"
            android:id="@+id/iv_shopcard_product"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_marginLeft="@dimen/item_margin"
            android:layout_toRightOf="@id/iv_shopcard_product"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/product_iv"
            >
            <TextView
                android:text="鸡肉卷"
                android:layout_margin="2dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/tv_shopcard_title"/>
            <TextView
                android:text="汉堡"
                android:maxLines="2"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textSize="@dimen/content_size"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/tv_shopcard_content"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="10dp"
                    android:layout_margin="2dp"
                    android:textColor="@color/black"
                    android:text="$19"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:id="@+id/tv_shopcard_cost"/>

                <RelativeLayout
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_second_cost"
                    android:layout_width="80dp"
                    android:layout_height="match_parent">
                    <ImageButton

                        android:layout_centerVertical="true"
                        android:background="@drawable/bg_button_press"
                        android:src="@mipmap/imageview_reduce"
                        android:id="@+id/bt_shopcard_reduce"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:text="1"
                        android:gravity="center"
                        android:id="@+id/tv_shopcard_quantity"
                        android:layout_centerInParent="true"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"/>
                    <ImageButton
                        android:layout_centerVertical="true"
                        android:background="@drawable/bg_button_press"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/imageview_add"
                        android:id="@+id/bt_shopcrad_add"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>