<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
<LinearLayout
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height">


    <ImageButton
        android:background="@drawable/bg_button_press"
        android:src="@mipmap/imageview_back"
        android:id="@+id/ibt_toolbar_back"
        android:layout_width="@dimen/toolbar_height"
        android:layout_height="match_parent"/>

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/textview_size_big"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text="zhouyinghong"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"/>
    <LinearLayout
        android:id="@+id/ly_userinfo_edit"
        android:background="@drawable/bg_button_press"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="修改个人资料"
            android:textColor="@color/black" />

        <ImageView
        android:layout_marginRight="10dp"
        android:paddingLeft="10dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/textview_edit"
        android:layout_width="30dp"
        android:layout_height="20dp"/>
    </LinearLayout>
</LinearLayout>
<androidx.cardview.widget.CardView

    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="6dp"
    app:cardBackgroundColor="@color/vip_color"
    app:cardElevation="100dp"
    app:cardMaxElevation="100dp"
  >
    <ImageView
        android:src="@mipmap/imageview_vip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textStyle="bold"
            android:text="0"
            android:id="@+id/tv_userinfo_integral"
            android:textColor="@color/white"
            android:textSize="@dimen/textview_size_max"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="@id/tv_userinfo_integral"
            android:id="@+id/tv_userinfo_rule"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="查看规则 "
            android:drawableRight="@mipmap/right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="1."
            android:textColor="@color/white"
            android:textSize="@dimen/textview_size_max"
            app:layout_constraintBottom_toTopOf="@id/tv_tip"
            android:id="@+id/tv_userinfo_integral_big"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/textview_size_big"
            android:text="1"
            app:layout_constraintBottom_toBottomOf="@id/tv_userinfo_integral_big"
            app:layout_constraintTop_toTopOf="@id/tv_userinfo_integral_big"
            app:layout_constraintLeft_toRightOf="@id/tv_userinfo_integral_big"
            android:id="@+id/tv_userinfo_integral_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginLeft="5dp"
            android:id="@+id/iv_userinfo_start"
            android:src="@mipmap/imageview_yellowstart"
            app:layout_constraintBottom_toBottomOf="@id/tv_userinfo_integral_big"
            app:layout_constraintTop_toTopOf="@id/tv_userinfo_integral_big"
            app:layout_constraintLeft_toRightOf="@id/tv_userinfo_integral_small"
            android:layout_width="15dp"
            android:layout_height="15dp"/>
        <me.zhouzhuo.zzhorizontalprogressbar.ZzHorizontalProgressBar
            android:id="@+id/pb_userinfo_integral"
            android:layout_marginLeft="10dp"
            android:layout_width="150dp"
            android:layout_height="8dp"
            app:zpb_open_gradient="true"
            app:zpb_gradient_from="#FFFF8D"
            app:zpb_gradient_to="@color/blue"
            app:layout_constraintLeft_toRightOf="@id/iv_userinfo_start"
            app:layout_constraintBottom_toBottomOf="@id/tv_userinfo_integral_big"
            app:layout_constraintTop_toTopOf="@id/tv_userinfo_integral_big"
            app:zpb_padding="0dp"
            app:zpb_pb_color="@color/blue"
            app:zpb_bg_color="@color/white"
            app:zpb_max="100"
            app:zpb_progress="110"
            />

        <TextView
            android:textStyle="bold"
            android:id="@+id/tv_tip"
            android:textSize="@dimen/textview_size_small"
            android:textColor="@color/white"
            android:text="每五十颗星可兑换一张10元现金卷"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    
</androidx.cardview.widget.CardView>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/textview_size_big"
        android:textColor="@color/black"
        android:text="会员权益"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_userinfo_birthday"
            android:background="@drawable/bg_button_press"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_userinfo_birthday"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/imageview_birthday"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <TextView
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:layout_below="@id/iv_userinfo_birthday"
                android:layout_centerHorizontal="true"
                android:text="生日礼品卷"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_userinfo_year"
            android:background="@drawable/bg_button_press"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_userinfo_year"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/imageview_anniversary"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <TextView
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_below="@id/iv_userinfo_year"
                android:layout_centerHorizontal="true"
                android:text="周年庆礼品卷"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_userinfo_exchange"
            android:background="@drawable/bg_button_press"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_userinfo_exchange"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/imageview_get_coupons"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <TextView
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_below="@id/iv_userinfo_exchange"
                android:layout_centerHorizontal="true"
                android:text="兑换优惠卷"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:src="@color/white"
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:layout_marginTop="20dp"
        android:background="@color/grey_divider"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="星星记录"
        android:textColor="@color/black"
        android:textSize="@dimen/textview_size_big" />
 <RelativeLayout
     android:layout_marginTop="10dp"
     android:layout_width="160dp"
     android:layout_height="40dp">
     <TextView
         android:background="@drawable/bg_button_press"
         android:textSize="18sp"
         android:id="@+id/tv_userinfo_get"
         android:textColor="@color/black"
         android:text="获取"
         android:gravity="center"
         android:layout_width="80dp"
         android:layout_height="38dp"/>
     <TextView
         android:textSize="18sp"
         android:background="@drawable/bg_button_press"
         android:layout_alignParentRight="true"
         android:id="@+id/tv_userinfo_reduce"
         android:textColor="@color/black"
         android:text="扣减"
         android:gravity="center"
         android:layout_width="80dp"
         android:layout_height="38dp"/>
     <View
         android:id="@+id/view_userinfo_indicator"
         android:layout_alignParentBottom="true"
         android:background="@color/blue"
         android:layout_width="80dp"
         android:layout_height="2dp"/>
 </RelativeLayout>
    <View
        android:background="@color/grey_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"/>
    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/rv_userinfo_integral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <include layout="@layout/layout_empty"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        />



</LinearLayout>