<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="70dp">
    <ImageView
        android:id="@+id/iv_submitfood_pic"
        android:src="@mipmap/imageview_defaultavatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <TextView
        app:layout_constraintBottom_toBottomOf="@id/iv_submitfood_pic"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/iv_submitfood_pic"
        app:layout_constraintLeft_toRightOf="@id/iv_submitfood_pic"
        android:text="支付套餐广东工业大学新技术是啊的痕迹大"
        android:maxWidth="200dp"
        android:id="@+id/tv_submitfood_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_submitfood_quantity"
        android:layout_marginRight="20dp"
        android:text="x1"
        app:layout_constraintRight_toLeftOf="@id/tv_submitfood_price"
        app:layout_constraintBottom_toBottomOf="@id/iv_submitfood_pic"
        app:layout_constraintTop_toTopOf="@id/iv_submitfood_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_submitfood_price"
        android:text="￥0.01"
        app:layout_constraintBottom_toBottomOf="@id/iv_submitfood_pic"
        app:layout_constraintTop_toTopOf="@id/iv_submitfood_pic"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>