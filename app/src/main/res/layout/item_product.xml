<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="10dp"
    android:id="@+id/rl_order_product"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <ImageView
            android:layout_centerVertical="true"
            android:src="@mipmap/imageview_test"
            android:layout_alignParentLeft="true"
            android:id="@+id/iv_second_product"
            android:layout_width="90dp"
            android:layout_height="90dp"/>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/item_margin"
            android:layout_toRightOf="@id/iv_second_product"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:text="鸡肉卷"
                android:textSize="@dimen/textview_size_normal"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/tv_second_title"/>
            <TextView
                android:text="汉堡"
                android:maxLines="2"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:textSize="@dimen/textview_size_min"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/tv_second_content"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="10dp"
                    android:layout_margin="2dp"
                    android:textColor="@color/black"
                    android:text="$19"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:id="@+id/tv_second_cost"/>

                <RelativeLayout
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_second_cost"
                    android:layout_width="80dp"
                    android:layout_height="match_parent">
                    <ImageButton
                         android:visibility="gone"
                        android:layout_centerVertical="true"
                        android:background="@drawable/bg_button_press"
                        android:src="@mipmap/imageview_reduce"
                        android:id="@+id/bt_order_reduce"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:visibility="gone"
                        android:gravity="center"
                        android:id="@+id/tv_order_quantity"
                        android:layout_centerInParent="true"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"/>
                    <ImageButton
                        android:layout_centerVertical="true"
                        android:background="@drawable/bg_button_press"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/imageview_add"
                        android:id="@+id/bt_order_add"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>

</RelativeLayout>