<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/margin8"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_height="60dp">
    <TextView
        android:id="@+id/tv_integral_source"
        android:text="交易获得"
        android:textSize="@dimen/textview_size_small"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_integral_time"
        android:text="2020-03-30 15：:1:39"
        android:layout_marginBottom="8dp"

        android:textSize="@dimen/textview_size_min"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_integral_changecount"
        android:text="+0"
        android:textSize="@dimen/textview_size_normal"
        android:textColor="@color/black"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_integral_source"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
<View
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:background="@color/grey_divider"
    android:layout_width="match_parent"
    android:layout_height="1px"/>
</androidx.constraintlayout.widget.ConstraintLayout>