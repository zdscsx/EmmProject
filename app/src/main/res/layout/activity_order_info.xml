<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <RelativeLayout
       android:background="@drawable/bg_white"
       android:padding="10dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <ImageView
           android:id="@+id/iv_orderinfo_location"
           android:layout_alignParentLeft="true"
           android:layout_centerVertical="true"
           android:layout_width="20dp"
           android:layout_height="20dp"
           android:layout_marginRight="10dp"
           android:src="@mipmap/imageview_location"/>
       <TextView
           android:id="@+id/tv_orderinfo_location"
           android:textSize="@dimen/textview_size_normal"
           android:textColor="@color/black"
           android:maxLines="1"
           android:layout_toRightOf="@id/iv_orderinfo_location"
           android:text="广东工业大学西生活区"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
       <TextView
           android:id="@+id/tv_orderinfo_info"
           android:text="番禺区大学城广东工业大学"
           android:maxLines="1"
           android:layout_below="@id/tv_orderinfo_location"
           android:layout_toRightOf="@id/iv_orderinfo_location"
           android:layout_marginTop="5dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
   </RelativeLayout>
  <LinearLayout
      android:padding="10dp"
      android:layout_marginTop="10dp"
      android:background="@drawable/bg_white"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <TextView
          android:text="外卖订单：454564445645"
          android:id="@+id/tv_orderinfo_id"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/rv_orderinfo_orderlist"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>
      <View
          android:layout_marginTop="10dp"
          android:background="@color/grey_divider"
          android:layout_width="match_parent"
          android:layout_height="@dimen/divider_height"/>
     <LinearLayout
         android:orientation="horizontal"
         android:layout_marginTop="10dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <View
             android:layout_weight="1"
             android:layout_width="0dp"
             android:layout_height="1dp"/>
      <TextView
          android:id="@+id/tv_orderinfo_quantity"
          android:textSize="@dimen/textview_size_min"
          android:text="共五件商品"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
         <TextView
             android:textColor="@color/black"
             android:layout_marginRight="4dp"
             android:textSize="@dimen/textview_size_small"
             android:layout_marginLeft="10dp"
             android:text="实付"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>
         <TextView
             android:textColor="@color/black"
             android:id="@+id/tv_orderinfo_cost"
             android:textSize="@dimen/textview_size_normal"
             android:layout_alignParentRight="true"
             android:layout_width="wrap_content"
             android:text="108.8"
             android:layout_height="wrap_content"/>
     </LinearLayout>


  </LinearLayout>
    <TextView
        android:id="@+id/tv_orderinfo_time"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:textSize="@dimen/textview_size_min"
        android:text="下单时间：2020-03-03 15:39"
        android:background="@drawable/bg_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>